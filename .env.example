# =============================================================================
# Required - Discord bot token
# =============================================================================
DISCORD_TOKEN=your_discord_bot_token_here

# Required - Channel ID for content announcements
DISCORD_ANNOUNCEMENT_CHANNEL_ID=123456789012345678

# Optional - Channel ID for server alerts (defaults to announcement channel)
DISCORD_ALERT_CHANNEL_ID=

# =============================================================================
# Jellyfin Configuration
# =============================================================================

# Enable/disable Jellyfin integration (default: true)
JELLYFIN_ENABLED=true

# Required if enabled - Jellyfin server URL(s)
# Can be a single URL or comma-separated list for failover
# Example single: http://jellyfin:8096
# Example multi:  http://internal:8096,https://external.example.com
JELLYFIN_URL=http://jellyfin:8096

# Required if enabled - Jellyfin API key
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Optional - Comma-separated announcement times in HH:MM format (default: 17:00)
JELLYFIN_SCHEDULE_ANNOUNCEMENT_TIMES=17:00

# Optional - Comma-separated suggestion times in HH:MM format (default: 12:00,20:00)
JELLYFIN_SCHEDULE_SUGGESTION_TIMES=12:00,20:00

# Optional - Timezone for scheduling (default: America/Los_Angeles)
SCHEDULE_TIMEZONE=America/Los_Angeles

# Optional - Health check interval in minutes (default: 5)
JELLYFIN_SCHEDULE_HEALTH_CHECK_INTERVAL=5

# Optional - Hours to look back for new content (default: 24)
JELLYFIN_SCHEDULE_LOOKBACK_HOURS=24

# Optional - Max items to show per content type (default: 10)
JELLYFIN_SCHEDULE_MAX_ITEMS_PER_TYPE=10

# Optional - Comma-separated content types (default: Movie,Series,Audio)
JELLYFIN_CONTENT_TYPES=Movie,Series,Audio

# =============================================================================
# Minecraft Configuration
# =============================================================================

# Enable/disable Minecraft integration (default: false)
MINECRAFT_ENABLED=false

# Optional - Channel ID for player join announcements (required if enabled)
MINECRAFT_ANNOUNCEMENT_CHANNEL_ID=123456789012345678

# Optional - Channel ID for server status alerts (required if enabled)
MINECRAFT_ALERT_CHANNEL_ID=123456789012345678

# Minecraft servers are configured in config.json only
# The servers list with names and URLs cannot be set via environment variables
# Use config.json for server definitions

# Optional - Health check interval in minutes (default: 1)
MINECRAFT_SCHEDULE_HEALTH_CHECK_INTERVAL=1

# Optional - Player check interval in seconds (default: 30)
MINECRAFT_SCHEDULE_PLAYER_CHECK_INTERVAL=30
